        @*<section id="adding" class="section">*@
            @using (Html.BeginForm("AddOne", "Product", FormMethod.Post))
            {
                @*<div class="form-group">
                    @Html.LabelFor(model => model.Artikul, "Артикул", new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.DisplayFor(model => model.Artikul)
